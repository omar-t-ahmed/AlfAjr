datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  username    String   @unique
  habits      Habit[]  @relation("UserHabits")
  friends     String[]
  totalReward Int
}

model Habit {
  id            Int     @id @default(autoincrement())
  userId        Int
  user          User    @relation(fields: [userId], references: [id], name: "UserHabits")
  worship       Worship
  dailyQuantity Float
  unit          Unit
  reward        Float
}

enum Worship {
  Quran
  Salawat
  Nafl
  Masjid
  Thikr
}

enum Unit {
  Verse
  Unit
  Minute
  Visit
}